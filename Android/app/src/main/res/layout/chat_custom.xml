<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/llreceiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgreceiv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_send_black_24dp" />

        <TextView
            android:id="@+id/msgreceiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgreceiv"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.9"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/llreceiv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/msgsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msgreceiv"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_weight="0.9"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imgsend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/msgsend"
            android:layout_below="@+id/msgreceiv"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_send_black_24dp" />

    </LinearLayout>

</RelativeLayout>
